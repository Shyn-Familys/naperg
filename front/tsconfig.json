{
  "compilerOptions": {
    "lib": ["es6", "dom", "es2017"],
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "strictNullChecks": true,
    "jsx": "react",
    "target": "es5",
    "allowJs": true,
    "strict": false,
    "forceConsistentCasingInFileNames": false,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["./src/"],
  "exclude": ["node_modules"]
}
